local_resource(
  name = 'dev:account-filing-api',
  cmd = 'mvn compile',
  deps = ['src/main']
)

custom_build(
  ref = '169942020521.dkr.ecr.eu-west-1.amazonaws.com/local/account-filing-api',
  command = 'mvn compile jib:dockerBuild -Dimage=$EXPECTED_REF',
  live_update = [
    sync(
      local_path = './target/classes',
      remote_path = '/app/classes'
    ),
    restart_container()
  ],
  deps = ['./target/classes']
)

load('ext://uibutton', 'cmd_button')

cmd_button('account-filing-api:toggle',
           argv=['sh', '-c', 'if [ "$(tilt status --resource account-filing-api)" = "enabled" ]; then tilt disable my_resource; else tilt enable account-filing-api; fi'],
           resource='my_resource',
           icon_name='power_settings_new',
           text='Toggle')